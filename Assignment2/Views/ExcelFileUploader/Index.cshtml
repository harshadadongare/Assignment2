@{
    ViewData["Title"] = "Upload your files here :";
}
<h1>@ViewData["Title"]</h1>


<form method="post" enctype="multipart/form-data" asp-controller="ExcelFileUploader" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload your Excel Files to BLOB storage (size>=1MB)</p>
            <input type="file" name="files" accept="application/vnd.ms-excel"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>